<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="LOG_DIR">logs</Property>
    </Properties>

    <Appenders>

        <!-- Application Logs -->
        <RollingFile name="AppFile"
                     fileName="${LOG_DIR}/ems.log"
                     filePattern="${LOG_DIR}/ems-%d{yyyy-MM-dd}.log.gz"
                     append="true">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c - %msg%n"/>

            <Policies>
                <!-- Roll once per day -->
                <TimeBasedTriggeringPolicy interval="1"/>
                <!-- Optional size safety -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- Audit Logs -->
        <RollingFile name="AuditFile"
                     fileName="${LOG_DIR}/audit.log"
                     filePattern="${LOG_DIR}/audit-%d{yyyy-MM-dd}.log.gz"
                     append="true">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} | %msg%n"/>

            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>

            <DefaultRolloverStrategy max="90"/>
        </RollingFile>

        <!-- Async wrappers -->
        <Async name="AsyncApp">
            <AppenderRef ref="AppFile"/>
        </Async>

        <Async name="AsyncAudit">
            <AppenderRef ref="AuditFile"/>
        </Async>

    </Appenders>

    <Loggers>

        <!-- Dedicated audit logger -->
        <Logger name="AUDIT" level="INFO" additivity="false">
            <AppenderRef ref="AsyncAudit"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="AsyncApp"/>
        </Root>

    </Loggers>

</Configuration>
