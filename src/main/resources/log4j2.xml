<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <!-- ================== PROPERTIES ================== -->
    <Properties>
        <Property name="LOG_DIR">logs</Property>
    </Properties>

    <!-- ================== APPENDERS ================== -->
    <Appenders>

        <!-- ========= APPLICATION LOGS ========= -->
        <RollingFile
                name="AppFile"
                fileName="${LOG_DIR}/ems.log"
                filePattern="${LOG_DIR}/ems-%d{yyyy-MM-dd}-%i.log.gz"
                append="true"
                locking="false">

            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c - %msg%n"/>

            <Policies>
                <!-- Daily rollover at midnight -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>

                <!-- Extra rollover if size exceeds -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <!-- Keep last 10 log files -->
            <DefaultRolloverStrategy max="10"/>

        </RollingFile>

        <!-- ========= AUDIT LOGS ========= -->
        <RollingFile
                name="AuditFile"
                fileName="${LOG_DIR}/audit.log"
                filePattern="${LOG_DIR}/audit-%d{yyyy-MM-dd}-%i.log.gz"
                append="true"
                locking="false">

            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} | %msg%n"/>

            <Policies>
                <!-- Daily rollover at midnight -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>

                <!-- Extra rollover if size exceeds -->
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>

            <!-- Keep last 20 audit files -->
            <DefaultRolloverStrategy max="20"/>

        </RollingFile>

        <!-- ========= ASYNC APPENDERS ========= -->
        <Async name="AsyncApp">
            <AppenderRef ref="AppFile"/>
        </Async>

        <Async name="AsyncAudit">
            <AppenderRef ref="AuditFile"/>
        </Async>

    </Appenders>

    <!-- ================== LOGGERS ================== -->
    <Loggers>

        <!-- Audit logger -->
        <Logger name="AUDIT" level="INFO" additivity="false">
            <AppenderRef ref="AsyncAudit"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="AsyncApp"/>
        </Root>

    </Loggers>

</Configuration>
